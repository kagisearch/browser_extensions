{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "2.2.5.4",

    "icons": {
        "512": "images/Icon.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    
    "content_scripts": [{
        "js": [ "content-script.js" ],
        "matches": [ "<all_urls>" ]
    }],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/ToolbarItemIcon.png"
        }
    },

    "permissions": [
        "nativeMessaging",
        "webNavigation",
        "storage"
    ],
    
    "optional_permissions": []
}
