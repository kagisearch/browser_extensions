{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "2.2.4",

    "icons": {
        "512": "images/Icon.png"
    },

    "background": {
        "scripts": [
            "rule-builder.js",
            "background.js"
        ],
        "persistent": false
    },

    "content_scripts": [{
        "js": [ "content-script.js" ],
        "matches": [ "<all_urls>" ],
        "exclude_matches" : ["*://*.kagi.com/*"],
        "run_at": "document_start"
    }, {
        "js": ["kagi-content-script.js"],
        "matches": ["*://*.kagi.com/*"],
        "run_at": "document_start"
    }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/ToolbarItemIcon.pdf"
        }
    },

    "permissions": [
        "nativeMessaging",
        "webNavigation",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "activeTab"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "optional_permissions": []
}
