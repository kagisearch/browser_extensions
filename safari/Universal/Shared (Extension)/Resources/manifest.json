{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "2.0.2",

    "icons": {
        "512": "images/Icon.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ],
        "service_worker": "background.js",
        "persistent": false
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/ToolbarItemIcon.png"
        }
    },

    "permissions": [
        "nativeMessaging",
        "declarativeNetRequestWithHostAccess",
        "storage"
    ],
    
    "host_permissions": [
        "*://kagi.com/*",
        "*://google.com/*",
        "*://duckduckgo.com/*",
        "*://yahoo.com/*",
        "*://bing.com/*",
        "*://*.bing.com/*",
        "*://ecosia.org/*",
        "*://*.ecosia.org/*"
    ]
}
